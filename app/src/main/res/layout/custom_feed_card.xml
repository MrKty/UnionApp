<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="354dp"
            android:layout_height="270dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            app:cardCornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="98dp"

                        android:orientation="vertical"
                        android:layout_marginEnd="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/topicTagTW"
                                android:layout_width="85dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/tag_button"
                                android:backgroundTint="#FF9800"
                                android:text="#study"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:autoSizeMaxTextSize="15sp"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeStepGranularity="2sp"
                                app:autoSizeTextType="uniform" />

                            <TextView
                                android:id="@+id/topicTagTW2"
                                android:layout_width="85dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="3dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="3dp"
                                android:background="@drawable/tag_button"
                                android:backgroundTint="#FF9800"
                                android:text="#study"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                app:autoSizeMaxTextSize="15sp"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeStepGranularity="2sp"
                                app:autoSizeTextType="uniform" />

                            <TextView
                                android:id="@+id/topicTagTW3"
                                android:layout_width="85dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/tag_button"
                                android:backgroundTint="#FF9800"
                                android:text="#study"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                app:autoSizeMaxTextSize="15sp"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeStepGranularity="2sp"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/publisherPp"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="3dp"
                                android:background="@drawable/user_pp_template"
                                android:scaleType="centerCrop"
                                android:shadowColor="#A8A8A8"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="5" />

                            <TextView
                                android:id="@+id/publisherNameTextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/black"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="3"
                                android:text="\@____________________" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/titleTW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:paddingLeft="4dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="0dp"
                    android:text="Yes Activity"
                    android:textSize="12sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/titleTW"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/contentTW"
                    android:layout_width="298dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/titleTW"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:paddingLeft="5dp"
                    android:textSize="12sp"
                    android:text="bla bla bla bla"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/contentTW"
                    android:background="#000000" />


                <ImageButton
                    android:id="@+id/sendButtonIB"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_below="@+id/ciii"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="101dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/send_icon" />

                <TextView
                    android:id="@+id/dateTWBuddy"
                    android:layout_width="236dp"
                    android:layout_height="19dp"
                    android:layout_above="@+id/genderPreferenceTW"
                    android:layout_below="@id/contentTW"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="-108dp"
                    android:layout_marginBottom="-1dp"
                    android:layout_toStartOf="@+id/zoomLinkTW"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:paddingLeft="10dp"
                    android:paddingTop="2dp"
                    android:text="23/04/2020   19.06"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/zoomLinkTW"
                    android:layout_width="164dp"
                    android:layout_height="21dp"
                    android:layout_above="@+id/quotaTW"
                    android:layout_below="@id/contentTW"

                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="113dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="19dp"
                    android:layout_marginBottom="-3dp"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:paddingLeft="10dp"
                    android:paddingTop="2dp"
                    android:text="Zoom link deuufdhgdg"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/quotaTW"
                    android:layout_width="164dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="19dp"
                    android:layout_marginBottom="66dp"

                    android:fontFamily="@font/myriad_pro_regular"
                    android:paddingLeft="10dp"
                    android:paddingTop="1dp"
                    android:text="Quota: 15"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/genderPreferenceTW"
                    android:layout_width="184dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="-56dp"
                    android:layout_marginBottom="67dp"
                    android:layout_toStartOf="@+id/quotaTW"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:paddingLeft="10dp"
                    android:paddingTop="1dp"
                    android:text="Gender: optional"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/quotaTW"
                    android:background="#000000"
                    android:id="@+id/ciii"
                    android:layout_marginTop="-64dp"/>
                <ImageButton
                    android:id="@+id/calendarIB"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/ciii"
                    app:srcCompat="@drawable/fixed_calender_icon" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="324dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            app:cardCornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/publisherPp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/user_pp_template"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="5dp"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="3dp"
                        android:shadowRadius="5"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginEnd="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="2">
                            <TextView
                                android:id="@+id/topicTagTW"
                                android:layout_width="85dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/tag_button_template"
                                android:backgroundTint="#FF9800"
                                android:text="#study"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeMaxTextSize="15sp"
                                app:autoSizeStepGranularity="2sp"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/topicTagTW2"
                                android:layout_width="85dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/tag_button_template"
                                android:backgroundTint="#FF9800"
                                android:layout_marginStart="3dp"
                                android:layout_marginEnd="3dp"
                                android:text="#study"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeMaxTextSize="15sp"
                                app:autoSizeStepGranularity="2sp"/>

                            <TextView
                                android:id="@+id/topicTagTW3"
                                android:layout_width="85dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/tag_button_template"
                                android:backgroundTint="#FF9800"
                                android:text="#study"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeMaxTextSize="15sp"
                                app:autoSizeStepGranularity="2sp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/publisherNameTextView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="\@____________________" />
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/titleTW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="60dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/bg_only_top_rounded"
                    android:paddingLeft="4dp"
                    android:paddingTop="1dp"
                    android:text="Yes Activity"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/contentTW"
                    android:layout_width="284dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/titleTW"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/bg_only_bottom_rounded"
                    android:paddingLeft="5dp"
                    android:textSize="12sp"
                    android:text="bla bla bla bla"/>

                <ImageButton
                    android:id="@+id/sendButtonIB"
                    android:layout_width="31dp"
                    android:layout_height="31dp"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="410dp"
                    android:layout_marginEnd="100dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/send_icon" />

                <TextView
                    android:id="@+id/dateTWBuddy"
                    android:layout_width="139dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/contentTW"
                    android:layout_above="@+id/genderPreferenceTW"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="-1dp"
                    android:layout_marginBottom="-1dp"
                    android:layout_toStartOf="@+id/zoomLinkTW"
                    android:background="@drawable/bg_only_top_left_rounded"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:paddingLeft="10dp"
                    android:paddingTop="2dp"
                    android:text="23/04/2020   19.06"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/zoomLinkTW"
                    android:layout_width="139dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/contentTW"
                    android:layout_above="@+id/quotaTW"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="-1dp"
                    android:background="@drawable/bg_only_top_right_rounded"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:text="Zoom link deuufdhgdg"
                    android:paddingLeft="10dp"
                    android:paddingTop="2dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/quotaTW"
                    android:layout_width="139dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="57dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_only_bottom_right_rounded"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:paddingLeft="10dp"
                    android:paddingTop="2dp"
                    android:text="Quota: 15"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/genderPreferenceTW"
                    android:layout_width="139dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="57dp"
                    android:layout_marginEnd="-1dp"
                    android:layout_marginStart="20dp"
                    android:layout_toStartOf="@+id/quotaTW"
                    android:background="@drawable/bg_only_bottom_left_rounded"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:paddingLeft="10dp"
                    android:paddingTop="2dp"
                    android:text="Gender: optional"
                    android:textSize="12sp" />

                <ImageButton
                    android:id="@+id/calendarIB"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="100dp"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@drawable/fixed_calender_icon" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

</RelativeLayout>
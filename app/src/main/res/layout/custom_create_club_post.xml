<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="324dp"
        android:layout_height="490dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <RelativeLayout
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:padding="5dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="73dp">

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="85dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/edittext_border_template"
                    android:inputType="date"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="224dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:text="Quota:" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:text="Date:" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="33dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="127dp"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:text="Time:" />

                <TextView
                    android:id="@+id/editTextTime"
                    android:layout_width="57dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="162dp"
                    android:background="@drawable/edittext_border_template"
                    android:ems="10"
                    android:inputType="time"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/editTextQuota"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="10dp"
                    android:paddingBottom="3dp"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:background="@drawable/edittext_border_template"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/editTextLocation"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="41dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edittext_border_template"
                    android:inputType="textPersonName|textCapWords"
                    android:paddingStart="5dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="45dp"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:text="Location:" />

            </RelativeLayout>


            <EditText
                android:id="@+id/editTextPostDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="240dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_only_bottom_rounded_border_template"
                android:gravity="start|top"
                android:hint="Write your announcement here..."
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="9"
                android:minLines="9"
                android:paddingStart="5dp"
                android:paddingTop="2dp"
                android:paddingEnd="3dp"
                android:scrollbars="vertical"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/tagSpinner"
                android:layout_width="253dp"
                android:layout_height="26dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="44dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="44dp"
                android:layout_marginRight="28dp"
                android:background="@drawable/edittext_border_template"
                android:spinnerMode="dialog"/>

            <TextView
                android:id="@+id/textViewCreateAnAnnouncement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/myriad_pro_regular"
                android:text="Create an announcement"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/uploadPhotoImageView"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="380dp"
                    android:layout_marginStart="145dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_baseline_add_a_photo_24" />

                <TextView
                    android:id="@+id/clickToSeeImageTW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/uploadPhotoImageView"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:text="Click to see linked Image"
                    android:visibility="invisible"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageViewSendButton"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/clickToSeeImageTW"
                    android:layout_marginStart="145dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginEnd="145dp"
                    android:background="@drawable/send_icon" />

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="90dp"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/textViewTag1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/tag_button_template"
                    android:backgroundTint="#FF9800"
                    android:text="#GE250/1"
                    android:padding="2dp"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="10sp"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeStepGranularity="1sp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/textViewTag2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/tag_button_template"
                    android:backgroundTint="@color/teal_200"
                    android:text="Startup"
                    android:padding="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="10sp"
                    app:autoSizeMaxTextSize="100sp"
                    app:autoSizeStepGranularity="1sp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/textViewTag3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/tag_button_template"
                    android:backgroundTint="#ED3976"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:text="Startup"
                    android:padding="2dp"
                    android:textAlignment="center"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="10sp"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeStepGranularity="1sp" />

            </LinearLayout>


            <EditText
                android:id="@+id/editTextHeadLine"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="216dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_only_top_rounded_border_template"
                android:hint="Write your headline here..."
                android:inputType="textPersonName|textCapWords"
                android:paddingStart="5dp"
                android:paddingEnd="3dp"
                android:textSize="15dp" />

        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
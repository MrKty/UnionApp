<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="336dp"
        android:layout_height="415dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="133dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/incorrectCodeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#E40808"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/verifyYourAccountTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="110dp"
                    android:text="Verify Your Account"
                    android:textColor="#1068DA"
                    android:textSize="28sp"
                    android:textAlignment="center" />


                <EditText
                    android:id="@+id/enterCodeET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/verifyYourAccountTV"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/edittext_border_template"
                    android:ems="10"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:hint="Enter Code"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/verifyButton"

                    android:layout_width="99dp"
                    android:layout_height="33dp"
                    android:layout_below="@id/enterCodeET"
                    android:background="@drawable/login_signup_button_template"
                    android:backgroundTint="#857FFD"
                    android:layout_margin="40dp"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:insetTop="0sp"
                    android:insetBottom="0sp"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="Verify"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sendAgainButton"
                    android:layout_width="99dp"
                    android:layout_height="33dp"
                    android:layout_below="@id/enterCodeET"
                    android:background="@drawable/login_signup_button_template"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="#857FFD"
                    android:layout_margin="40dp"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:insetTop="0sp"
                    android:insetBottom="0sp"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="Send Code"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
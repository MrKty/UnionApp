<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88ABE3"
    android:translationZ="90dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/profileTagButton1"

                android:layout_width="wrap_content"
                android:layout_height="23dp"

                android:layout_marginTop="105dp"
                android:background="@drawable/tag_button_template"
                android:backgroundTint="#F14D53"
                android:fontFamily="@font/myriad_pro_regular"
                android:insetTop="0sp"
                android:insetBottom="0sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="#abcd"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/profileTagButton2"

                android:layout_width="wrap_content"
                android:layout_height="23dp"

                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/tag_button_template"
                android:backgroundTint="#5FC1E8"
                android:fontFamily="@font/myriad_pro_regular"
                android:insetTop="0sp"
                android:insetBottom="0sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="#xyz"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#040202"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileTagButton1" />

            <TextView
                android:id="@+id/lastActsTextView"

                android:layout_width="193dp"
                android:layout_height="47dp"

                android:layout_marginStart="2dp"
                android:layout_marginEnd="1dp"
                android:background="@drawable/text_view_left_template"
                android:backgroundTint="#4D4D4D"
                android:fontFamily="@font/myriad_pro_regular"
                android:gravity="center"
                android:onClick="lastActs"
                android:shadowRadius="5"
                android:text="Last Activities"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@+id/lastActsListPU"
                app:layout_constraintEnd_toStartOf="@+id/achsTextView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="88dp"
                android:text="\@_______________"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/userPp"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/userPp"

                android:layout_width="105dp"
                android:layout_height="104dp"

                android:layout_marginStart="24dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="26dp"
                android:background="@drawable/user_pp_template"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                app:layout_constraintBottom_toTopOf="@+id/lastActsTextView"
                app:layout_constraintEnd_toStartOf="@+id/profileTagButton1"
                app:layout_constraintHorizontal_bias="0.43"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.93"
                app:srcCompat="@drawable/ic_baseline_person_24"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/backButtonn"
                android:layout_width="40dp"
                android:layout_height="34dp"

                android:layout_marginStart="16dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="276dp"
                android:background="@drawable/back"
                app:layout_constraintEnd_toStartOf="@+id/directMessage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/achsTextView"

                android:layout_width="0dp"
                android:layout_height="47dp"

                android:background="@drawable/text_view_right_template"
                android:fontFamily="@font/myriad_pro_regular"
                android:gravity="center"
                android:insetTop="0sp"
                android:insetBottom="0sp"
                android:onClick="Achs"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Achievements"
                android:textAlignment="center"
                android:textColor="#5F5E5D"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@+id/lastActsListPU"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lastActsTextView" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/profileTagButton3"

                android:layout_width="wrap_content"
                android:layout_height="24dp"

                android:layout_marginStart="160dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="156dp"
                android:background="@drawable/tag_button_template"
                android:backgroundTint="#5FE8A1"
                android:fontFamily="@font/myriad_pro_regular"
                android:insetTop="0sp"
                android:insetBottom="0sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="#klmnoprst"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileTagButton2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/achsListPU"
                android:layout_width="match_parent"
                android:layout_height="484dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/achsTextView">

            </androidx.recyclerview.widget.RecyclerView>

            <ImageView
                android:id="@+id/directMessage"
                android:layout_width="44dp"
                android:layout_height="41dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/send_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lastActsListPU"
                android:layout_width="match_parent"
                android:layout_height="483dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="242dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toStartOf="@+id/achsListPU"
                app:layout_constraintHorizontal_bias="0.007"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.recyclerview.widget.RecyclerView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <androidx.cardview.widget.CardView
        android:layout_width="336dp"
        android:layout_height="355dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="336dp"
            android:layout_height="415dp"
            android:gravity="fill">


            <EditText
                android:id="@+id/emailTextView"
                android:layout_width="171dp"
                android:layout_height="41dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="130dp"
                android:layout_marginBottom="253dp"
                android:ems="10"
                android:fontFamily="@font/myriad_pro_regular"
                android:hint="Email Adress"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/passwordTextView"
                android:layout_width="171dp"
                android:layout_height="41dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="130dp"
                android:layout_marginBottom="253dp"
                android:ems="10"
                android:fontFamily="@font/myriad_pro_regular"
                android:hint="New Password"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/verifyPasswordTextView"
                android:layout_width="171dp"
                android:layout_height="41dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="174dp"
                android:layout_marginEnd="130dp"
                android:layout_marginBottom="199dp"
                android:ems="10"
                android:fontFamily="@font/myriad_pro_regular"
                android:hint="New Password"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/enterCodeTextView"
                android:layout_width="171dp"
                android:layout_height="41dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="174dp"
                android:layout_marginEnd="130dp"
                android:layout_marginBottom="199dp"
                android:ems="10"
                android:fontFamily="@font/myriad_pro_regular"
                android:hint="Enter Code"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/unionTextView"
                android:layout_width="231dp"
                android:layout_height="33dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="51dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="330dp"
                android:fontFamily="@font/myriad_pro_regular"
                android:text="Recover Your Account"
                android:textAlignment="center"
                android:textColor="#1068DA"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orTextView"
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="150dp"
                android:layout_marginBottom="102dp"
                android:fontFamily="@font/myriad_pro_regular"
                android:gravity="center"
                android:text="or"
                android:textColor="#868686" />

            <TextView
                android:id="@+id/loginTextView"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:layout_marginBottom="76dp"
                android:fontFamily="@font/myriad_pro_regular"
                android:gravity="center"
                android:onClick="login"
                android:text="Login"
                android:textColor="#66B5E0" />

            <TextView
                android:id="@+id/incorrectCodeTextView"
                android:layout_width="160dp"
                android:layout_height="26dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="369dp"
                android:fontFamily="@font/myriad_pro_regular"
                android:gravity="center"
                android:text="Incorrect Code!"
                android:textColor="#E40808"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/VerifyButton"

                android:layout_width="99dp"
                android:layout_height="33dp"

                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="135dp"
                android:layout_marginEnd="120dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="247dp"
                android:background="@drawable/login_signup_button_template"
                android:backgroundTint="#857FFD"
                android:fontFamily="@font/myriad_pro_regular"
                android:insetBottom="0sp"
                android:insetTop="0sp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Verify "
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="21sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/changePasswordButton"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="85dp"
                android:layout_marginTop="247dp"
                android:layout_marginEnd="85dp"
                android:layout_marginBottom="135dp"
                android:background="@drawable/login_signup_button_template"
                android:backgroundTint="#857FFD"
                android:fontFamily="@font/myriad_pro_regular"
                android:insetTop="0sp"
                android:insetBottom="0sp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Change Password"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sendAgainButton"

                android:layout_width="99dp"
                android:layout_height="33dp"

                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="170dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="206dp"
                android:layout_marginTop="123dp"
                android:background="@drawable/login_signup_button_template"
                android:backgroundTint="#857FFD"
                android:fontFamily="@font/myriad_pro_regular"
                android:insetBottom="0sp"
                android:insetTop="0sp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Send Again"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"

    android:padding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="324dp"
        android:layout_height="451dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="300dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="133dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/checkBoxAnonymous"
                    android:layout_width="151dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="370dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="40dp"
                    android:text="Ask Anonymously"
                    android:textSize="10dp" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginStart="140dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="395dp"
                    android:layout_marginEnd="140dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/send_icon" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="84dp"
                    android:background="@drawable/tag_button_template"
                    android:text="#study"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewCreateQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Find a Buddy"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="204dp"
                    android:layout_weight="1"
                    android:text="Quota:" />

                <SearchView
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edittext_border_template" >

                </SearchView>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="158dp"
                    android:text="Date:" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="158dp"
                    android:layout_marginEnd="80dp"
                    android:text="Time:" />

                <EditText
                    android:id="@+id/editTextDate"
                    android:layout_width="134dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginBottom="268dp"
                    android:ems="10"
                    android:inputType="date" />

                <EditText
                    android:id="@+id/editTextTime"
                    android:layout_width="69dp"
                    android:layout_height="19dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="268dp"
                    android:ems="10"
                    android:inputType="time" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="195dp"
                    android:layout_marginEnd="83dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="199dp"
                    android:text="Preferred Gender:" />

                <EditText
                    android:id="@+id/editTextNumber2"
                    android:layout_width="89dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="186dp"
                    android:layout_marginBottom="201dp"
                    android:ems="10"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/editTextQuestion"
                    android:layout_width="303dp"
                    android:layout_height="107dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="89dp"
                    android:background="@drawable/edittext_border_template"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Write the details here..."
                    android:inputType="textMultiLine"
                    android:textSize="12sp" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageButtonAddPhoto"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_add_a_photo_24"
        tools:layout_editor_absoluteX="316dp"
        tools:layout_editor_absoluteY="66dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
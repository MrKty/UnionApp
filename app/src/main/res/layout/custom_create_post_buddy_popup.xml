<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="324dp"
        android:layout_height="451dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="133dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewCreateAnAnnouncement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:text="Find a Buddy"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <Spinner
                    android:id="@+id/tagSpinner"
                    android:layout_width="253dp"
                    android:layout_height="26dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="43dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="43dp"
                    android:background="@drawable/edittext_border_template"
                    android:entries="@array/buddy_tags"
                    android:prompt="@string/buddy_search_promt"
                    android:spinnerMode="dialog">
                </Spinner>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="80dp"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/textViewTag1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/tag_button_template"
                        android:backgroundTint="#FF9800"
                        android:text="#study"
                        android:textAlignment="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:layout_weight="1"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/textViewTag2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/tag_button_template"
                        android:backgroundTint="@color/teal_200"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="#walking"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:layout_weight="1"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/textViewTag3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/tag_button_template"
                        android:backgroundTint="#EC2F51"
                        android:text="#dancing"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:layout_weight="1"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="327dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="110dp"
                    android:padding="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="73dp">

                    <EditText
                        android:id="@+id/editTextDate"
                        android:layout_width="85dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="38dp"
                        android:layout_marginTop="9dp"
                        android:background="@drawable/edittext_border_template"
                        android:inputType="date"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="224dp"
                        android:layout_marginTop="11dp"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:text="Quota:" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="11dp"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:text="Date:" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="33dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="127dp"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:text="Time:" />

                    <EditText
                        android:id="@+id/editTextTime"
                        android:layout_width="57dp"
                        android:layout_height="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="9dp"
                        android:layout_marginStart="162dp"
                        android:background="@drawable/edittext_border_template"
                        android:ems="10"
                        android:inputType="time"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/editTextQuota"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="10dp"
                        android:paddingBottom="3dp"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:background="@drawable/edittext_border_template"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/editTextLocation"
                        android:layout_width="match_parent"
                        android:layout_height="26dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="41dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="10dp"
                        android:paddingStart="5dp"
                        android:textSize="12sp"
                        android:background="@drawable/edittext_border_template"
                        android:inputType="textPersonName" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="45dp"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:text="Location:" />
                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/editTextLocation"
                        android:text="Preferred Gender:" />
                    <Spinner
                        android:id="@+id/genderSpinner"
                        android:layout_width="137dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="65dp"
                        android:layout_toEndOf="@+id/textView6"
                        android:prompt="@string/buddy_search_promt"
                        android:spinnerMode="dialog" />

                    <EditText
                        android:id="@+id/editTextHeadLine"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@+id/textView6"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="3dp"
                        android:background="@drawable/edittext_only_top_rounded_border_template"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:hint="Write your headline here..."
                        android:inputType="textPersonName"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editTextPostDetails"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_below="@id/editTextHeadLine"
                        android:background="@drawable/edittext_only_bottom_rounded_border_template"
                        android:ems="10"
                        android:paddingStart="5dp"
                        android:paddingEnd="3dp"
                        android:gravity="start|top"
                        android:hint="Write your announcement here..."
                        android:inputType="textMultiLine"
                        android:minLines="9"
                        android:maxLines="9"
                        android:scrollbars="vertical"
                        android:paddingTop="2dp"
                        android:textSize="12sp" />


                    <ImageView
                        android:id="@+id/uploadPhotoImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="145dp"
                        android:layout_below="@id/editTextPostDetails"
                        android:src="@drawable/ic_baseline_add_a_photo_24" />

                    <ImageView
                        android:id="@+id/imageViewSendButton"
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/uploadPhotoImageView"
                        android:layout_marginStart="140dp"
                        android:background="@drawable/send_icon" />


                </RelativeLayout>





            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
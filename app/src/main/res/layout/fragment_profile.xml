<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88ABE3"
    android:translationZ="90dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="336dp"
        android:layout_height="415dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="336dp"
            android:layout_height="415dp"
            android:gravity="fill">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="191dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="224dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                app:cardCornerRadius="25dp">

                <RelativeLayout
                    android:layout_width="337dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lastActsTextView"

                        android:layout_width="150dp"
                        android:layout_height="37dp"

                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="0dp"
                        android:layout_marginEnd="168dp"
                        android:layout_marginStart="0dp"
                        android:background="@drawable/text_view_template_left"
                        android:backgroundTint="#4D4D4D"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:gravity="center"
                        android:insetBottom="0sp"
                        android:insetTop="0sp"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:text="Last Activities"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.497"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.512" />

                    <TextView
                        android:id="@+id/achsTextView"

                        android:layout_width="150dp"
                        android:layout_height="37dp"

                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="168dp"
                        android:background="@drawable/text_view_template_right"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:gravity="center"
                        android:insetBottom="0sp"
                        android:insetTop="0sp"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:text="Achievements"
                        android:textAlignment="center"
                        android:textColor="#5F5E5D"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.497"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.512" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="157dp">

                    <ImageView
                        android:id="@+id/userPp"

                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="30dp"
                        android:layout_marginEnd="210dp"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/user_pp_template"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/userNameTextView"
                        android:layout_width="125dp"
                        android:layout_height="19dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="103dp"
                        android:layout_marginEnd="67dp"
                        android:layout_marginStart="0"
                        android:layout_marginTop="0dp"
                        android:text="\@____________________" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/tagButton3"

                        android:layout_width="78dp"
                        android:layout_height="19dp"

                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="38dp"
                        android:layout_marginEnd="70dp"
                        android:background="@drawable/tag_button_template"
                        android:backgroundTint="#5FE8A1"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:insetBottom="0sp"
                        android:insetTop="0sp"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:text="Button"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.497"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.512" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/tagButton2"

                        android:layout_width="78dp"
                        android:layout_height="19dp"

                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="69dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/tag_button_template"
                        android:backgroundTint="#5FC1E8"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:insetBottom="0sp"
                        android:insetTop="0sp"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:text="Button"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.497"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.512" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/tagButton1"

                        android:layout_width="78dp"
                        android:layout_height="19dp"

                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="69dp"
                        android:layout_marginEnd="115dp"
                        android:background="@drawable/tag_button_template"
                        android:backgroundTint="#EA2A31"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:insetBottom="0sp"
                        android:insetTop="0sp"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:text="Button"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.497"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.512" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"

    android:padding="5dp"
    android:textAlignment="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="324dp"
        android:layout_height="451dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="300dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="133dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/answerEditText"
                    android:layout_width="278dp"
                    android:layout_height="29dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="361dp"
                    android:background="@drawable/edittext_border_template"
                    android:hint="  enter your comment/question here..."
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/upIcon3imageView"
                    android:layout_width="28dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="261dp"
                    android:layout_marginEnd="3dp"
                    app:srcCompat="@drawable/up_icon" />

                <ImageView
                    android:id="@+id/upIcon2imageView"
                    android:layout_width="28dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="221dp"
                    android:layout_marginEnd="3dp"
                    app:srcCompat="@drawable/up_icon" />

                <TextView
                    android:id="@+id/askedQuestionTextView"
                    android:layout_width="303dp"
                    android:layout_height="107dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="291dp"
                    android:background="@drawable/edittext_border_template"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Club announcement will be displayed here..."
                    android:inputType="textMultiLine"
                    android:textSize="12sp" />

                <ImageButton
                    android:id="@+id/sendButtonIB"
                    android:layout_width="31dp"
                    android:layout_height="31dp"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="145dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="420dp"
                    android:layout_marginEnd="145dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/send_icon" />

                <TextView
                    android:id="@+id/answer1textView"
                    android:layout_width="278dp"
                    android:layout_height="29dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="181dp"
                    android:background="@drawable/edittext_border_template"
                    android:text="user1234: wow..." />

                <TextView
                    android:id="@+id/answer2textView"
                    android:layout_width="278dp"
                    android:layout_height="29dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="221dp"
                    android:background="@drawable/edittext_border_template"
                    android:text="bilkenter123: will there be ge250 points?..." />

                <TextView
                    android:id="@+id/answer3textView"
                    android:layout_width="278dp"
                    android:layout_height="29dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="261dp"
                    android:background="@drawable/edittext_border_template"
                    android:text="anonym: amazing!" />

                <ImageView
                    android:id="@+id/upIcon1imageView"
                    android:layout_width="28dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="181dp"
                    android:layout_marginEnd="3dp"
                    app:srcCompat="@drawable/up_icon" />

                <CheckBox
                    android:id="@+id/anonymCheckBox"
                    android:layout_width="117dp"
                    android:layout_height="36dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="20dp"
                    android:text="Post Anonymously"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/relatedTagTextView"
                    android:layout_width="75dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/tag_button_template"
                    android:text="#Career"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/posterClubTextView"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/edittext_border_template"
                    android:text="\@YES_Bilkent"
                    android:textAlignment="center"
                    android:textSize="10sp" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <androidx.cardview.widget.CardView
        android:layout_width="336dp"
        android:layout_height="415dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="336dp"
            android:layout_height="415dp"
            android:gravity="fill">


            <CheckBox
                android:id="@+id/iAgreeWithTextView"
                android:layout_width="101dp"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="111dp"
                android:layout_marginEnd="196dp"
                android:layout_marginStart="39dp"
                android:layout_marginTop="288dp"
                android:text="Remember Me"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/passwordTextView"
                android:layout_width="246dp"
                android:layout_height="42dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="134dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="239dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/nameTextView"
                android:layout_width="247dp"
                android:layout_height="44dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="177dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="194dp"
                android:ems="10"
                android:hint="Email Adress"
                android:inputType="textPersonName" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="239dp"
                android:layout_marginEnd="120dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="80dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ikn_kare" />

            <TextView
                android:id="@+id/welcomeToTextView"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="323dp"
                android:layout_marginEnd="109dp"
                android:layout_marginStart="47dp"
                android:layout_marginTop="33dp"
                android:fontFamily="sans-serif-light"
                android:text="Welcome to"
                android:textAlignment="center"
                android:textColor="#1068DA"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/unionTextView"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="322dp"
                android:layout_marginEnd="57dp"
                android:layout_marginStart="159dp"
                android:layout_marginTop="33dp"
                android:fontFamily="sans-serif-light"
                android:text="unI0n"
                android:textAlignment="center"
                android:textColor="#1068DA"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/thiccView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="145dp"
                android:layout_marginEnd="44dp"
                app:srcCompat="@drawable/ic_action_name" />

            <TextView
                android:id="@+id/orTextView"
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="36dp"
                android:layout_marginEnd="150dp"
                android:layout_marginStart="150dp"
                android:gravity="center"
                android:text="or"
                android:textColor="#868686" />

            <TextView
                android:id="@+id/loginTextView"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="90dp"
                android:layout_marginStart="90dp"
                android:gravity="center"
                android:text="Forgot Your Password?"
                android:textColor="#66B5E0" />

            <androidx.cardview.widget.CardView
                android:id="@+id/loginCardView"
                android:layout_width="90dp"
                android:layout_height="33dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="63dp"
                android:layout_marginEnd="120dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="320dp"
                app:cardBackgroundColor="#00FFFFFF"
                app:cardCornerRadius="6dp">

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#8580FA"
                    android:text="Login"
                    android:textColor="#FFFFFF" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>